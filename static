#include<iostream>
using namespace std;
class student{
    public:
    static int total;
    student(){total+=1;}
};
int student::total =0;
int main (){
    student s1;
    cout<<"number of student :"<<s1.total<<endl;
    student s2;
    cout<<"number of student:"<<s2.total<<endl;
    student s3;
    cout<<"number of student:"<<s3.total;
    return 0;
    
}
